<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cc"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/bgbarra"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cadeado"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/barravermelha" />

    <com.github.siyamed.shapeimageview.CircularImageView

        android:id="@+id/playimg"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siBorderWidth="0dp" />

    <ImageView
        android:id="@+id/argola"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/argola" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/bgbarra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/playimg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ontime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:text="Online - 30 mins"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/playimg"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/ultvisi"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="1dp"
        android:text="Ultima visita - 200 dias"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/ontime"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/visitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:text="50 Visitas"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/playimg"
        app:layout_constraintTop_toBottomOf="@+id/ontime" />

    <TextView
        android:id="@+id/block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:text="50 Visitas"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/visitas"
        app:layout_constraintTop_toBottomOf="@+id/ontime" />

    <ImageView
        android:id="@+id/cadeado"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cadeado" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="74dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:rotation="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coroa" />

</android.support.constraint.ConstraintLayout>